generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  TEACHER
}

enum Gender {
  Male
  Female
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(TEACHER)
  teacher   Teacher?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Teacher {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  nip       String   @unique
  phone     String   @unique
  homeroom  Class[]  @relation("HomeroomTeacher")
  subjectId String
  subjects  Subject  @relation(fields: [subjectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("teachers")
}

model Subject {
  id        String    @id @default(cuid())
  name      String
  code      String
  teachers  Teacher[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("subjects")
}

model AcademicYear {
  id        String    @id @default(cuid())
  year      String    @unique
  isActive  Boolean   @default(false)
  students  Student[]
  class     Class[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("academicYears")
}

model Class {
  id                String       @id @default(cuid())
  name              String
  grade             Int
  major             String
  academicYearId    String
  academicYear      AcademicYear @relation(fields: [academicYearId], references: [id])
  homeroomTeacherId String
  homeroomTeacher   Teacher      @relation("HomeroomTeacher", fields: [homeroomTeacherId], references: [id])
  student           Student[]
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@map("classes")
}

enum StudentStatus {
  Active
  Graduated
  Dropped_Out
  Transferred
}

model Student {
  id             String        @id @default(cuid())
  nis            String        @unique
  name           String
  gender         Gender
  birthDate      DateTime
  status         StudentStatus @default(Active)
  academicYearId String
  academicYear   AcademicYear  @relation(fields: [academicYearId], references: [id])
  classId        String?
  class          Class?        @relation(fields: [classId], references: [id])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("students")
}
